<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/api_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size30dp"
        android:layout_centerHorizontal="true"
        android:text="@string/gmail_button"/>
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_below="@+id/api_button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="5"
        android:visibility="gone"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/api_button"
        android:layout_centerHorizontal="true"
        >

    <ImageView
        android:id="@+id/i1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gmail_launcher"
        android:layout_marginTop="@dimen/size20dp"
        android:padding="@dimen/size10dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/i1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size30dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/size20dp"/>
    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_name"
        android:layout_toRightOf="@id/i1"
        android:textSize="@dimen/size12dp"
        android:textAlignment="inherit"/>
    <TextView
        android:id="@+id/snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details"
        android:layout_toRightOf="@id/i1"
        android:textSize="@dimen/size15dp"
        android:paddingTop="@dimen/size5dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textAlignment="inherit"/>
    <ImageView
        android:id="@+id/attachment_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_attachment_black_24dp"
        android:layout_below="@+id/snippet"
        android:layout_toRightOf="@+id/i1"
        android:visibility="gone"

        />
    <TextView
        android:id="@+id/attachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snippet"
        android:textSize="@dimen/size16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size1dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/attachment_symbol"
        />

        </RelativeLayout>

</RelativeLayout>