<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    
    <RelativeLayout
        android:id="@+id/messagesLeft"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        >

    <TextView
        android:id="@+id/bodyLeft"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

        <TextView
            android:id="@+id/timeLeft"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:layout_below="@id/bodyLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/statusLeft"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:layout_below="@id/bodyLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/dateLeft"
        android:layout_below="@id/messagesLeft"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <RelativeLayout
        android:id="@+id/messagesRight"
        android:layout_width="250dp"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:id="@+id/bodyRight"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/timeRight"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:layout_below="@id/bodyRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/statusRight"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:layout_below="@id/bodyRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/contactDetails"
            android:layout_alignParentRight="true"
            android:background="@color/red"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/photoSelected"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <TextView
        android:id="@+id/dateRight"
        android:layout_below="@id/messagesRight"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>