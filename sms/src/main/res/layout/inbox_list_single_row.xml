<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/sms_Sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/sms_sent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sms_Received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/sms_received" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mms_Sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/mms_sent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mms_Received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/mms_received" />
    </RelativeLayout>

</RelativeLayout>