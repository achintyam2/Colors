<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/full_screen_layout"
        android:background="@drawable/one"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:weightSum="1">

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:padding="10dp"
            >

                <ImageView
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/pattern_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/i2" />
            <ImageView
                android:id="@+id/i1"
                android:layout_toLeftOf="@id/i2"
                android:layout_marginRight="40dp"
                android:padding="5dp"
                android:background="@drawable/pattern_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ImageView
                android:id="@+id/i3"
                android:layout_toRightOf="@id/i2"
                android:layout_marginLeft="40dp"
                android:padding="5dp"
                android:background="@drawable/pattern_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:padding="10dp"
                >
                <ImageView
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/pattern_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/i5" />

                <ImageView
                    android:id="@+id/i4"
                    android:layout_toLeftOf="@id/i5"
                    android:layout_marginRight="40dp"
                    android:padding="5dp"
                    android:background="@drawable/pattern_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/i6"
                    android:layout_toRightOf="@id/i5"
                    android:layout_marginLeft="40dp"
                    android:padding="5dp"
                    android:background="@drawable/pattern_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:padding="10dp"
                >

                <ImageView
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/pattern_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/i8" />

                <ImageView
                    android:id="@+id/i7"
                    android:layout_toLeftOf="@id/i8"
                    android:layout_marginRight="40dp"
                    android:padding="5dp"
                    android:background="@drawable/pattern_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <ImageView
                    android:id="@+id/i9"
                    android:layout_toRightOf="@id/i8"
                    android:layout_marginLeft="40dp"
                    android:padding="5dp"
                    android:background="@drawable/pattern_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout

            android:background="#ffffff"
            android:alpha="0.8"
            android:id="@+id/list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <ListView
                android:id="@+id/list_images"
                android:rotation="270"
                android:dividerHeight="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>